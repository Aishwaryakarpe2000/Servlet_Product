<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  
  <context-param>
  	<param-name>sname</param-name>
  	<param-value>Modern</param-value>
  </context-param>
  
  
  <servlet>
  	<servlet-name>scl</servlet-name>
  	<servlet-class>servlets_studend.SignupController</servlet-class>
  	
  	<init-param>
  		<param-name>onetime</param-name>
  		<param-value>100000</param-value>
  	</init-param>
  	<init-param>
  		<param-name>installment</param-name>
  		<param-value>120000</param-value>
  	</init-param>
  	
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>scl</servlet-name>
  	<url-pattern>/signup</url-pattern>
  </servlet-mapping>
  
  
  
  
  <servlet>
  	<servlet-name>login</servlet-name>
  	<servlet-class>servlets_studend.LoginController</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>login</servlet-name>
  	<url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  
</web-app>
